{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "HotelMicroservices",
    "Audience": "HotelMicroservicesClients",
    "ExpireMinutes": 60
  },
  "Integrations": {
    "RecaApi": {
      "BaseUrl": "http://aureacuenrest.runasp.net/"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "catalogos-route": {
        "ClusterId": "catalogos-cluster",
        "Match": {
          "Path": "/api/catalogos/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/catalogos"
          },
          {
            "PathPrefix": "/api"
          }
        ]
      },
      "habitaciones-route": {
        "ClusterId": "habitaciones-cluster",
        "Match": {
          "Path": "/graphql/{**catch-all}"
        }
      },
      "habitaciones-ui-route": {
        "ClusterId": "habitaciones-cluster",
        "Match": {
          "Path": "/graphql-ui/{**catch-all}"
        }
      },
      "reservas-route": {
        "ClusterId": "reservas-cluster",
        "Match": {
          "Path": "/grpc/{**catch-all}"
        }
      },
      "usuarios-pagos-route": {
        "ClusterId": "usuarios-pagos-cluster",
        "Match": {
          "Path": "/api/usuarios-pagos/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/usuarios-pagos"
          },
          {
            "PathPrefix": "/api"
          }
        ]
      }
    },
    "Clusters": {
      "catalogos-cluster": {
        "Destinations": {
          "catalogos-service": {
            "Address": "${CATALOGOS_SERVICE_URL}"
          }
        }
      },
      "habitaciones-cluster": {
        "Destinations": {
          "habitaciones-service": {
            "Address": "${HABITACIONES_SERVICE_URL}"
          }
        }
      },
      "reservas-cluster": {
        "Destinations": {
          "reservas-service": {
            "Address": "${RESERVAS_SERVICE_URL}"
          }
        }
      },
      "usuarios-pagos-cluster": {
        "Destinations": {
          "usuarios-pagos-service": {
            "Address": "${USUARIOS_PAGOS_SERVICE_URL}"
          }
        }
      }
    }
  }
}